<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".ChooseCategoriesActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="413dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:text="DIGI-TEACH"
        android:textSize="35dp"
        android:gravity="center"
        android:background="@color/blue2"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/TypingGuide"
        android:layout_width="183dp"
        android:layout_height="221dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="212dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:theme="@style/MyButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/CameraGuide"
        android:layout_width="183dp"
        android:layout_height="221dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:theme="@style/MyButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/MessageCall"
        android:layout_width="183dp"
        android:layout_height="221dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="212dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:theme="@style/MyButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/Email"
        android:layout_width="183dp"
        android:layout_height="221dp"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="12dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:theme="@style/MyButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/Credit"
        android:layout_width="364dp"
        android:layout_height="53dp"
        android:layout_marginTop="636dp"
        android:layout_marginEnd="16dp"
        android:text="CREDIT"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageView
        android:id="@+id/TypingLogo"
        android:layout_width="178dp"
        android:layout_height="215dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="210dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:srcCompat="@drawable/typinglogo" />

    <ImageView
        android:id="@+id/CameraLogo"
        android:layout_width="178dp"
        android:layout_height="215dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:srcCompat="@drawable/cameralogo" />

    <ImageView
        android:id="@+id/MessageLogo"
        android:layout_width="178dp"
        android:layout_height="215dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="210dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:srcCompat="@drawable/messagelogo" />

    <ImageView
        android:id="@+id/EmailLogo"
        android:layout_width="178dp"
        android:layout_height="215dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:srcCompat="@drawable/emaillogo" />

</androidx.constraintlayout.widget.ConstraintLayout>