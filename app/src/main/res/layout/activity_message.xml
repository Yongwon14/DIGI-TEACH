<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    tools:context=".MessageGuideActivity"
    android:background="@drawable/bggreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="427dp"
        android:layout_height="98dp"
        android:background="@color/green2"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Message Guide"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/YouNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:background="@color/white"
        android:text="DIGI-TEACH"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/timestampText"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timestampText"
        android:layout_width="247dp"
        android:layout_height="49dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:text="Does our app help?"
        android:textColor="@color/green"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="83dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        android:src="@drawable/applogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:srcCompat="@drawable/applogo" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="250dp"
        android:layout_height="76dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="108dp"
        android:background="#C0C0C0"
        android:hint="Yes, it's helpful!"
        android:textColorHint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="250dp"
        android:layout_height="76dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="76dp"
        android:layout_height="86dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/melogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:srcCompat="@drawable/melogo" />

    <TextView
        android:id="@+id/MyNameText"
        android:layout_width="79dp"
        android:layout_height="30dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="13dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="Me"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <TextView
        android:id="@+id/MessageText"
        android:layout_width="242dp"
        android:layout_height="58dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/round_border"
        android:gravity="center"
        android:textColor="@color/purple"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="83dp"
        android:layout_height="84dp"
        android:layout_marginTop="404dp"
        android:layout_marginEnd="16dp"
        android:text="send"
        android:theme="@style/MyButtonStyle3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>